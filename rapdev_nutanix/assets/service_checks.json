[
    {
        "agent_version": "7.0.0",
        "integration": "RapDev Nutanix",
        "check": "rapdev.nutanix.can_connect",
        "statuses": [
            "ok",
            "critical"
        ],
        "groups": [
            "cvm_host"
        ],
        "name": "Nutanix Connection Status",
        "description": "Returns `OK` if the agent can connect to Nutanix API, or `CRITICAL` if it can't."
    },
    {
        "agent_version": "7.0.0",
        "integration": "RapDev Nutanix",
        "check": "rapdev.nutanix.disks.disk_status",
        "statuses": [
            "ok",
            "critical"
        ],
        "groups": [
            "disk"
        ],
        "name": "Nutanix Disk Status",
        "description": "Returns `OK` if the disk is in a NORMAL state, or `CRITICAL` if it is not."
    },
    {
        "agent_version": "7.0.0",
        "integration": "RapDev Nutanix",
        "check": "rapdev.nutanix.protection_domains.is_active",
        "statuses": [
            "ok",
            "critical"
        ],
        "groups": [
            "protection_domain"
        ],
        "name": "Nutanix Protection Domain Status",
        "description": "Returns `OK` if the Protection Domain is in a NORMAL state, or `CRITICAL` if it is not."
