        {
            "definition": {
                "has_search_bar": "auto",
                "requests": [
                    {
                        "aggregator": "avg",
                        "alias": "Key Compliance",
                        "cell_display_mode": [
                            "number"
                        ],
                        "conditional_formats": [
                            {
                                "comparator": ">=",
                                "palette": "white_on_red",
                                "value": 1
                            },
                            {
                                "comparator": "<",
                                "palette": "white_on_green",
                                "value": 1
                            }
                        ],
                        "limit": 50,
                        "order": "desc",
                        "q": "avg:rapdev.validator.tag.missing_key{$Host,$Key} by {validated_host,tag_key}"
                    }
                ],
                "time": {},
                "title": "Tag Key Compliance Summary",
                "title_align": "left",
                "title_size": "16",
                "type": "query_table"
            },
            "id": 4926929220723516,
